@page
@model NewsAddModel
@{
    Layout = "LayoutLogged";
    ViewData["Description"] = "- Admin Panel - News - Add";
    ViewData["Login"] = @Model.user.login;
    ViewData["FenXs-Stars"] = @Model.user.fenXs_Stars;
}

<div class="row m-2">
    <a href="../News" class="btn btn-primary border border-dark shadow">Back To News</a>
</div>
@if (Model.dangerBox)
{
    <div class="alert alert-dismissible bg-danger m-2 mt-3 border border-dark shadow" role="alert">
        <span asp-validation-for="news.title" class="d-block"></span>
        <span asp-validation-for="news.text" class="d-block"></span>
        <span asp-validation-for="news.idOfCategory" class="d-block"></span>
        <span class="d-block">@Model.info</span>
        <button type="button" class="btn-close position-absolute top-50 translate-middle-y" data-bs-dismiss="alert"
        aria-label="Close"></button>
    </div>
}
<form method="post" class="m-2 mt-3 text-light bg-dark border border-light rounded shadow">
    <div class="form-group m-2 h3 text-center">
        Add New News
    </div>
    <div class="form-group m-2">
        <label asp-for="news.title" class="form-label h5">Title</label>
        <input type="text" asp-for="news.title" class="form-control border border-dark" placeholder="Title">
    </div>
    <div class="form-group m-2 my-3">
        <label asp-for="news.text" class="form-label h5">Text</label>
        <textarea asp-for="news.text" class="form-control border border-dark" placeholder="Main content"></textarea>
    </div>
    <div class="form-group m-2 my-3">
        <label asp-for="news.text" class="form-label h5">Category</label>
        <select asp-for="news.idOfCategory" class="form-control">
            @foreach (var newsCategory in Model.listOfNewsCategories)
            {
                <option value="@newsCategory.id">@newsCategory.name</option>
            }
        </select>
    </div>
    <div class="form-group m-2">
        <button type="submit" class="btn btn-success w-100 border border-dark">Add</button>
    </div>
</form>